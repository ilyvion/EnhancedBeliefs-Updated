<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/InteractionDef[defName="ConvertIdeoAttempt"]/workerClass</xpath>
		<value>
			<workerClass>EnhancedBeliefs.InteractionWorker_AdvancedConversionAttempt</workerClass>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TraderKindDef[defName="Caravan_Outlander_BulkGoods"]/stockGenerators</xpath>
		<value>
			<li Class="EnhancedBeliefs.StockGenerator_IdeoBook">
				<thingDef>EB_Ideobook</thingDef>
				<countRange>0~2</countRange>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TraderKindDef[defName="Caravan_Outlander_BulkGoods"]/stockGenerators</xpath>
		<value>
			<li Class="EnhancedBeliefs.StockGenerator_IdeoBook">
				<thingDef>EB_Ideobook</thingDef>
				<countRange>0~2</countRange>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/TraderKindDef[defName="Caravan_Outlander_Exotic"]/stockGenerators</xpath>
		<value>
			<li Class="EnhancedBeliefs.StockGenerator_IdeoBook">
				<thingDef>EB_Ideobook</thingDef>
				<countRange>1~2</countRange>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationInsert">
		<xpath>Defs/ThingDef[@Name="BasePawn"]/inspectorTabs/li[text()="ITab_Pawn_Social"]</xpath>
		<value>
			<li>EnhancedBeliefs.ITab_Opinion</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationInsert">
		<xpath>Defs/ThinkTreeDef/thinkRoot[@Class="ThinkNode_Tagger"]/subNodes/li[@Class="ThinkNode_ConditionalMentalStateClass"][stateClass="MentalState_Tantrum"]</xpath>
		<value>
			<li Class="ThinkNode_ConditionalMentalStateClass">
				<stateClass>EnhancedBeliefs.MentalState_Iconoclast</stateClass>
				<subNodes>
					<li Class="EnhancedBeliefs.JobGiver_Iconoclast" />
					<li Class="ThinkNode_PrioritySorter">
						<subNodes>
							<li Class="JobGiver_GetFood">
								<maxLevelPercentage>0.05</maxLevelPercentage>
							</li>
							<li Class="JobGiver_GetRest">
								<maxLevelPercentage>0.15</maxLevelPercentage>
							</li>
						</subNodes>
					</li>
					<li Class="JobGiver_WanderColony" />
				</subNodes>
			</li>
		</value>
	</Operation>

</Patch>
